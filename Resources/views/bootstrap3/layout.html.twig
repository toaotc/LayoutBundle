{% extends 'ToaLayoutBundle::base.html.twig' %}

{% block title -%}
    {{ parent() }} with Bootstrap3
{%- endblock %}

{% block stylesheets %}
    {{ parent() }}

    {% stylesheets
        '@bootstrap3_css'
        filter='cssrewrite'
    -%}
        <link href="{{ asset_url }}" rel="stylesheet" type="text/css" />
    {% endstylesheets %}

{% endblock %}

{% block body %}
    <div class="container">{% block content '' %}</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% javascripts
        '@bootstrap3_js'
    -%}
        <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
{% endblock %}
